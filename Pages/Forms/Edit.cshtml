@page
@model MyFirstProject.Pages.Forms.EditModel
@{
}
<div class="container">

    <center><h1>Update Person Information</h1></center>
    <form method="post">
        <div asp-validation-summary="All" style="color:red"></div>
        <input type="hidden" asp-for="Person.PersonId" />
        <div class=" form-group">
            <label>Name</label>
            <input class="form-control" asp-for="Person.Name" />
        </div>
        <div class=" form-group">
            <label>Lastname</label>
            <input class="form-control" asp-for="Person.Lastname" />
        </div>
        <div class=" form-group">
            <label>Email</label>
            <input class="form-control" asp-for="Person.Email" />
        </div>
        <div class=" form-group">
            <label>Age</label>
            <input class="form-control" asp-for="Person.Age" />
        </div>
        <div class=" form-group">
            <label>Contactnumber</label>
            <input class="form-control" asp-for="Person.Contactnumber" />
        </div>
        <div class=" form-group">
            <label>Password</label>
            <input class="form-control" asp-for="Person.Password" />
        </div>
        <div class=" form-group">
            <label>Confirmpassword</label>
            <input class="form-control" asp-for="Person.Confirmpassword" />
        </div>

        <center><button class="btn btn-primary" type="submit">Update</button></center>
    </form>

</div>